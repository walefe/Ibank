generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payable {
  id           String    @id @default(uuid())
  value        Float
  emissionDate DateTime  @map("emission_date")
  assignorId   String    @map("assignor_id")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  deleteAt     DateTime? @map("deleted_at")

  assignorModel Assignor @relation(fields: [assignorId], references: [id])

  @@map("payable")
}

model Assignor {
  id        String    @id @default(uuid())
  document  String    @db.VarChar(30)
  email     String    @unique @db.VarChar(140)
  phone     String    @db.VarChar(20)
  name      String    @db.VarChar(140)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deleteAt  DateTime? @map("deleted_at")

  payable Payable[]

  @@map("assignor")
}
